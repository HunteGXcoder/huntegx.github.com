<body>

<div class="container">
    <h1>Buy Tokens</h1>

    <label for="tokenAmount">Enter the number of tokens:</label>
    <input type="number" id="tokenAmount" min="1" value="1" oninput="calculateTotal()">

    <p class="total">Total Price: $<span id="totalPrice">10.00</span></p>

    <button class="button" onclick="buyTokens()">Buy Tokens</button>
</div>

<script>
    const tokenPrice = 10.00; // Price per token

    function calculateTotal() {
        const tokenAmount = document.getElementById('tokenAmount').value;
        const totalPrice = tokenAmount * tokenPrice;
        document.getElementById('totalPrice').textContent = totalPrice.toFixed(2);
    }

    function buyTokens() {
        const tokenAmount = document.getElementById('tokenAmount').value;
        const totalPrice = (tokenAmount * tokenPrice).toFixed(2);

        alert(`You are buying ${tokenAmount} tokens for $${totalPrice}.`);

        // You would integrate your payment gateway API here (like Stripe, PayPal, etc.)
    }
</script>

